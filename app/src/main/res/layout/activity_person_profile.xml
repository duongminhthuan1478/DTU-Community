<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_profile"
    tools:context=".PersonProfileActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_circle_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/person_profile_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@id/person_profile_circle_image"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/person_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_below="@id/person_profile_fullname"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello. My name is Secret..."
                android:layout_below="@id/person_profile_username"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/person_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@id/person_profile_status"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/person_profile_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:layout_below="@id/person_profile_country"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/person_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/person_profile_dob"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/person_profile_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relationship status"
                android:layout_below="@id/person_profile_gender"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            
            <Button
                android:id="@+id/person_profile_send_friend_button"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_relationship_status"
                android:background="@drawable/button_blue"
                android:text="Thêm Bạn"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/person_profile_denny_friend_button"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_send_friend_button"
                android:background="@drawable/button"
                android:text="Từ chối"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>